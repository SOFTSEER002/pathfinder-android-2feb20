<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/gs1_ext_2d_settings_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvCompositeCcAb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/composite_ccab"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/tbCompositeCcAbValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvCompositeCcAb"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOff="OFF"
        android:textOn="ON" />

    <TextView
        android:id="@+id/tvCompositeCCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCompositeCcAb"
        android:layout_below="@+id/tvCompositeCcAb"
        android:layout_marginTop="28dp"
        android:text="@string/composite_ccc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/tbCompositeCCCValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvCompositeCCC"
        android:layout_alignRight="@+id/tbCompositeCcAbValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOff="OFF"
        android:textOn="ON" />

    <TextView
        android:id="@+id/tvExpanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCompositeCcAb"
        android:layout_below="@+id/tvCompositeCCC"
        android:layout_marginTop="28dp"
        android:text="@string/expanded"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/tbExpandedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvExpanded"
        android:layout_alignRight="@+id/tbCompositeCcAbValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOff="OFF"
        android:textOn="ON" />

    <TextView
        android:id="@+id/tvLimited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCompositeCcAb"
        android:layout_below="@+id/tvExpanded"
        android:layout_marginTop="28dp"
        android:text="@string/limited"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/tbLimitedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLimited"
        android:layout_alignRight="@+id/tbCompositeCcAbValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOff="OFF"
        android:textOn="ON" />

</RelativeLayout>